# ===== OPTIONAL PAID =====
# Unusual Whales - Options flow ($50-100/mo)
UNUSUAL_WHALES_API_KEY=

# WhaleWisdom - Institutional data (Paid)
WHALE_WISDOM_API_KEY=

# ===== DATABASE =====
DATABASE_URL=sqlite:///data/trading_app.db

# ===== APP SETTINGS =====
FLASK_SECRET_KEY=your-secret-key-here
DEBUG=True

